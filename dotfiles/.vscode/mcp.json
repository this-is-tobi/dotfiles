{
	"servers": {
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/"
		},
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${env:CONTEXT7_API_KEY}"
      }
    },
		"kubernetes": {
			"command": "docker",
			"args": [
				"run",
				"--name",
				"mcp-kubernetes",
				"--rm",
				"-i",
				"-v",
				"/Users/tobi/.kube:/home/appuser/.kube:ro",
				"docker.io/mcp/kubernetes"
			],
			"type": "stdio"
		}
	},
	"inputs": []
}
